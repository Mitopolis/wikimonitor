#/bin/bash
#UNIX bash shell script to install wmd, the WikiMonitor Daemon
#Daemon:
echo '#!/bin/sh' > $PWD/wmd
echo 'echo Starting...' >> $PWD/wmd
echo 'until [ $? != 0 ]; do' >> $PWD/wmd
echo 'php -f main.php' >> $PWD/wmd
echo 'done' > $PWD/wmd
#Config:
chmod +x $PWD/wmd
echo $PWD/wmd >> ~/.bashrc
